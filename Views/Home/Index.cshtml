<div class="row">
    <div class="col-md-4">
        <h4>Search travels</h4>       
        <hr />
        
        <form asp-action="SearchTravels" method="post">

            <div asp-validation="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label" asp-for="DepartureCity"></label>
                <input class="form-control" asp-for="DepartureCity" />
                <span asp-validation-for="DepartureCity"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ArrivalCity"></label>
                <input class="form-control" asp-for="ArrivalCity" />
                <span asp-validation-for="ArrivalCity"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Date"></label>
                <input class="form-control" asp-for="Date" />
                <span asp-validation-for="Date"></span>
            </div>            
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </div>


        </form>

    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}